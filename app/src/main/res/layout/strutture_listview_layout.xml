<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewStruttura"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:padding="5dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/textViewNomeStruttura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/imageViewStruttura"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:fontFamily="@font/myfont"
            android:textStyle="bold"
            tools:text="NomeStruttura"/>

        <TextView
            android:id="@+id/textViewDistanza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNomeStruttura"
            android:textSize="17dp"
            android:layout_marginLeft="110dp"
            android:layout_weight="1"
            tools:text="Distanza"/>

        <ImageView
            android:id="@+id/imageViewStella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewStruttura"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_2stelle" />

    </RelativeLayout>



</LinearLayout>
