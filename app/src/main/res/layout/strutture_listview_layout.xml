<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:background="@android:color/transparent"
    android:padding="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewStruttura"
                app:shapeAppearanceOverlay="@style/onlyonecorner"
                android:layout_width="360dp"
                android:layout_marginLeft="10dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.11" />

                <TextView
                    android:id="@+id/textViewNomeStruttura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageViewStruttura"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="210dp"
                    android:fontFamily="@font/myfont"
                    android:textColor="#333"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:text="NomeStruttura" />

                <TextView
                android:id="@+id/textViewDistanza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNomeStruttura"
                android:textSize="17dp"
                android:layout_marginLeft="110dp"
                android:layout_weight="1"
                tools:text="Distanza"/>

            <ImageView
                android:id="@+id/imageViewStella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewStruttura"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1" />
</RelativeLayout>










