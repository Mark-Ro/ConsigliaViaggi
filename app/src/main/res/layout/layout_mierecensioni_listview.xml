<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#FFFFFF"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/textViewNomeStrutturaMieRecensioni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/imageViewStruttura"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="10dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:fontFamily="@font/myfont"
            tools:text="Nome Struttura"/>

        <ImageView
            android:id="@+id/imageViewStelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTestoMieRecensioni"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_5stelle" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTestoMieRecensioni"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textColor="#333"
            android:text="Voto" />


        <TextView
            android:id="@+id/textViewTestoMieRecensioni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="140"
            tools:text="Ciao\nCiao"
            android:fontFamily="@font/myfont"
            android:textColor="@android:color/black"
            android:padding="20dp"
            android:background="@drawable/background_reviews"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/textViewNomeStrutturaMieRecensioni"
            android:textSize="16dp"
            />

    </RelativeLayout>




</LinearLayout>
