<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.RicercaPage">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/textbox" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="331dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:srcCompat="@drawable/textbox" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="Città"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="*"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toEndOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="Città"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="Nome Struttura"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/myfont"
        android:text="Nelle tue vicinanze"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/switchGPS"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView20"
        app:layout_constraintTop_toBottomOf="@+id/imageView18" />


    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView18"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/iconcity" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:srcCompat="@drawable/icongps" />

    <Switch
        android:id="@+id/switchGPS"
        android:layout_width="49dp"
        android:layout_height="30dp"

        android:layout_marginEnd="40dp"
        android:theme="@style/SCBSwitch"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/myfont"
        android:text="Filtri"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/myfont"
        android:text="Prezzo massimo"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/myfont"
        android:text="Voto minimo"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonHotel" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:isIndicator="false"
        android:progressTint="@color/Bluchiaro"
        android:secondaryProgressTint="@android:color/transparent"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonRistorante" />

    <TextView
        android:id="@+id/textViewRangePrezzo"
        android:layout_width="74dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/myfont"
        android:text="50 €"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView21"
        app:layout_constraintStart_toEndOf="@+id/textView21" />

    <Button
        android:id="@+id/bottoneRicerca"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sfondobottonebluchiaro"
        android:fontFamily="@font/myfont"
        android:text="Vai"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bottoneAnnulla"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/sfondo_bottone_bianco"
        android:fontFamily="@font/myfont"
        android:text="Annulla"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bottoneRicerca"
        app:layout_constraintStart_toStartOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextCitta"
        android:layout_width="298dp"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        android:completionThreshold="1"
        android:popupBackground="@drawable/sfondo_autocompletetext"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.533" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextNomeStruttura"
        android:layout_width="298dp"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21" />

    <SeekBar
        android:id="@+id/seekBarPrezzoMassimo"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:max="3000"
        android:min="50"
        android:progressTint="@color/Bluchiaro"
        android:thumbTint="@color/Bluscuro"
        app:layout_constraintBottom_toTopOf="@+id/bottoneAnnulla"
        app:layout_constraintEnd_toEndOf="@+id/textViewRangePrezzo"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/toggleButtonHotel"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/toggle_button_hotel"
        android:fontFamily="@font/myfont"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textOff="Hotel"
        android:textOn=""
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21" />

    <ToggleButton
        android:id="@+id/toggleButtonRistorante"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:background="@drawable/toggle_button_ristoranti"
        android:fontFamily="@font/myfont"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textOff="Ristorante"
        android:textOn=""
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonHotel"
        app:layout_constraintEnd_toStartOf="@+id/toggleButtonAltro"
        app:layout_constraintStart_toEndOf="@+id/toggleButtonHotel" />

    <ToggleButton
        android:id="@+id/toggleButtonAltro"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/toggle_button_altro"
        android:fontFamily="@font/myfont"
        android:text="ToggleButton"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textOff="Altro"
        android:textOn=""
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toggleButtonHotel"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>